<%- include ('../partials/boilerplate') %>

    <div class='item'>
        <h3><%= item.name %></h3>
        <img src="<%= item.img_url %>" />        
        <p><%= item.description %></p>
        <p><%= item.quantity %></p> 

        <form method="POST" action="/items/<%= item.id %>/edit?_method=GET">
            <input type="submit" value="Edit">
        </form>

        <a href='/items/'>Show all items</a>
    </div>

<%- include ('../partials/end') %>

